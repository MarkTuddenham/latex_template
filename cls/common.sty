\definecolor{burgundy}{rgb}{0.5, 0.0, 0.13}

\sectionfont			{\fontsize{14}{16}\selectfont}
\subsectionfont		{\fontsize{11}{12}\selectfont}
\subsubsectionfont{\fontsize{10}{11}\selectfont}
\useunder{\uline}{\ul}{}
